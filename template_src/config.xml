<?xml version='1.0' encoding='utf-8'?>
<widget id="{ReverseDomainNameNotations}" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>{stationFullName} Player</name>
    <description>
        The Official {stationFullName} Player that streams from {streamURL}
    </description>
    <author email="erstazi@gmail.com" href="http://radio.ucfsc.org">
        Seth Keiper (WFSN-LP)
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/android/favicon-32.png" />
        <icon density="mdpi" src="res/android/favicon-48.png" />
        <icon density="hdpi" src="res/android/favicon-72.png" />
        <icon density="xhdpi" src="res/android/favicon-96.png" />
        <icon density="xxhdpi" src="res/android/favicon-144.png" />
        <icon density="xxxhdpi" src="res/android/favicon-192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreen" value="none" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="FadeSplashScreenDuration" value="0" />
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-dialogs" spec="^1.3.3" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-media" spec="^3.0.1" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.2.3" />
    <plugin name="nl.x-services.plugins.backgroundaudio" spec="^1.0.1" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="https://github.com/katzer/cordova-plugin-local-notifications" />
</widget>
